#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t; 
    cin >> t;
    while(t--) {
        int n; 
        cin >> n;
        vector<int> a(n);
        for(int i = 0; i < n; i++) cin >> a[i];

        int pref = 1;
        for(int i = 1; i < n; i++) {
            if(a[i] == a[0]) pref++;
            else break;
        }

        int suf = 1;
        for(int i = n - 2; i >= 0; i--) {
            if(a[i] == a[n - 1]) suf++;
            else break;
        }

        int ans;
        if(a[0] == a[n - 1]) {
            int kept = pref + suf;
            if(kept > n) kept = n;
            ans = max(0, n - kept);
        } else {
            ans = min(n - pref, n - suf);
        }

        cout << ans << '\n';
    }
    return 0;
}
